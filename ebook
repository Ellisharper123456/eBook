<script>
// Rolling counters
const counters = {
    households: 310,   // Updated number
    savings: 500000,
    projects: 270
};

function animateCounter(id, target) {
    const el = document.getElementById(id);
    let count = 0;
    const increment = target / 100; 
    const step = () => {
        count += increment;
        if(count < target) {
            el.innerText = Math.floor(count).toLocaleString();
            requestAnimationFrame(step);
        } else {
            el.innerText = target.toLocaleString();
        }
    };
    step();
}

animateCounter('households', counters.households);
animateCounter('savings', counters.savings);
animateCounter('projects', counters.projects);

// Form submission
document.getElementById('ebookForm').addEventListener('submit', function(event) {
    event.preventDefault();
    alert('Thank you! Your eBook download link and referral code have been sent to your email.');
});
</script>

